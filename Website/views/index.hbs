    <table>
<script type="text/javascript">
  mapboxgl.accessToken = 'pk.eyJ1IjoidGtheW5lMTAiLCJhIjoiY2lwOTVobWx3MDFnNHRjbHl0am95YmhvMSJ9.RSsOrxJBCf89fcrlDJfejg';
  var map = new mapboxgl.Map({
    container: 'map',
    style: 'mapbox://styles/tkayne10/cj1tzvn3s001p2soc1pq5qh8u',
    center: [-94.298, 40.920],
    zoom: 3.3
  });
  map.on('load', function () {
    // When a click event occurs on a feature in the places layer, open a popup at the
    // location of the feature, with description HTML from its properties.
    map.on('click', 'tweet-jobs', function (e) {
        new mapboxgl.Popup()
            .setLngLat(e.features[0].geometry.coordinates)
            .setHTML(e.features[0].properties.body)
            .addTo(map);
    });
    // Change the cursor to a pointer when the mouse is over the places layer.
    map.on('mouseenter', 'tweet-jobs', function () {
        map.getCanvas().style.cursor = 'pointer';
    });
    // Change it back to a pointer when it leaves.
    map.on('mouseleave', 'tweet-jobs', function () {
        map.getCanvas().style.cursor = '';
    });
    map.on('mouseenter', 'tweet-jobs2', function () {
        map.getCanvas().style.cursor = 'pointer';
    });
    map.on('mouseleave', 'tweet-jobs2', function () {
        map.getCanvas().style.cursor = '';
    });
    map.on('mouseenter', 'tweet-jobs3', function () {
        map.getCanvas().style.cursor = 'pointer';
    });
    map.on('mouseleave', 'tweet-jobs3', function () {
        map.getCanvas().style.cursor = '';
    });
    map.on('mouseenter', 'tweet-jobs4', function () {
        map.getCanvas().style.cursor = 'pointer';
    });
    map.on('mouseleave', 'tweet-jobs4', function () {
        map.getCanvas().style.cursor = '';
    });
  });
</script>
